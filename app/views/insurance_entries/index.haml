%h2
  ="Code Search"
-if flash[:notice]
  %p.notice
    =flash[:notice]
-if flash[:error]
  %p.error
    =flash[:error]
=form_tag "search", :method => :get do
  %p
    =label_tag "Select Insurance Company"
    =select_tag "insurance_company", options_for_select(@insurance_entries)
  %p
    = text_field_tag "surgery_code", nil, :placeholder => "Surgery Code"
    = submit_tag "Submit"
    