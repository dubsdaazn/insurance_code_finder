%h2
  ="Update"
=form_tag "update_entry", :method => :get do
  %p
    =label_tag "Insurance Company"
    =text_field_tag "insurance_company","#{params[:insurance_company]}"
    =hidden_field_tag "old_insurance_company", "#{params[:insurance_company]}"
  %p
    =label_tag "Surgery Code"
    =text_field_tag "surgery_code","#{params[:surgery_code]}"
    =hidden_field_tag "old_surgery_code", "#{params[:surgery_code]}"
  %p
    =label_tag "Approved?"
    =check_box_tag "is_approved", nil, params[:is_approved] ? true : false
    =hidden_field_tag "is_approved", params[:is_approved] ? true : false
    
  %p 
    =submit_tag "Update"